
@{
    ViewBag.Title = "Index";
}

<h2>Registro de secretos</h2>

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/CssValidacion.css" rel="stylesheet" />
<div>
    <p align="right">
        <button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg pull-right" data-toggle="modal" data-target="#myModal" id="popup">Agregar nuevo secreto</button>
    </p>
</div>
<div class="form-group">
    <h4 id="nombre"></h4>
    <img src="" id="foto" width="100" height="100"/>
</div>
<br />
<h3>Lista de Secretos</h3>
<div id="secretos">

</div>

<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <label>Registro</label>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="txtId">Id Secreto</label>
                        <input type="number" class="form-control" id="txtId" placeholder="Ingrese Id" readonly>
                    </div>
                    <div class="form-group">
                        <label for="txtTitulo">Titulo</label>
                        <input type="text" class="form-control borrar obligatorio" id="txtTitulo" placeholder="Ingrese titulo del secreto">
                    </div>
                    <div class="form-group">
                        <label for="txtDescripcion">Descripcion</label>
                        <input type="text" class="form-control borrar obligatorio" id="txtDescripcion" placeholder="Ingrese una descrepcion">
                    </div>
                    <div class="form-group">
                        <label for="valorMonetario">Valor Monetario</label>
                        <input type="number" class="form-control borrar obligatorio" id="valorMonetario" placeholder="Ingrese el valor monetario">
                    </div>
                    <div class="form-group">
                        <label for="txtLugar">Lugar</label>
                        <input type="text" class="form-control borrar obligatorio" id="txtLugar" placeholder="Ingrese el lugar">
                    </div>
                    <div class="form-group">
                        <label for="txtFecha">Fecha aproximanada</label>
                        <input type="text" class="form-control borrar obligatorio" id="txtFecha" placeholder="Ingrese la fecha aproximada">
                    </div>
                    <div class="form-group">
                        <label for="txtUsuario">Usuario</label>
                        <select id="txtUsuario" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtLat">Latitud</label>
                        <input type="text" class="form-control borrar obligatorio" id="txtLat" placeholder="Ingrese la latitud">
                    </div>
                    <div class="form-group">
                        <label for="txtLot">Longitud</label>
                        <input type="text" class="form-control borrar obligatorio" id="txtLot" placeholder="Ingrese la longitud">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Agregar()" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Secretos.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
